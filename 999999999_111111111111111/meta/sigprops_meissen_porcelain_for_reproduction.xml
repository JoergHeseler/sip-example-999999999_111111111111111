<?xml version="1.0" encoding="UTF-8"?>
<ObjectType xmlns="http://slubarchiv.slub-dresden.de/sigprops1"
    xsi:schemaLocation="http://slubarchiv.slub-dresden.de/sigprops1 https://slubarchiv.slub-dresden.de/slubarchiv/standards/sigprops/sigprops.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" language="de">
    <Metadata>
        <CreationDate>2025-05-21T12:00:00</CreationDate>
        <Creator>Jörg Heseler</Creator>
        <WorkflowName>SKD_Porzellanfiguren</WorkflowName>
        <InstitutionName>SLUB Dresden</InstitutionName>
        <InstitutionContact>langzeitarchiv@slub-dresden.de</InstitutionContact>
        <ObjectTypeName>Porzellanfiguren mit zugehörigen Tonteilen</ObjectTypeName>
    </Metadata>
    <SignificantProperties>
        <!-- Geometrie und Proportion -->
        <SignificantProperty>
            <PropertyName>Oberflächenstrukturen</PropertyName>
            <PropertyExplanation>Das Objekt besitzt feinste Oberflächenmerkmale wie Kratzer, Rillen
                oder Unebenheiten zur detailgetreuen Reproduktion.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Proportionen</PropertyName>
            <PropertyExplanation>Das Objekt weist exakte Proportionen des Originals auf, um
                Maßhaltigkeit sicherzustellen.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Dimensionsgenauigkeit</PropertyName>
            <PropertyExplanation>Das Objekt ist frei von wahrnehmbaren geometrischen Abweichungen
                bei normalem Betrachtungsabstand.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>

        <!-- Maß- und Metadaten-Dokumentation -->
        <SignificantProperty>
            <PropertyName>Maßangaben</PropertyName>
            <PropertyExplanation>Das Objekt ist mit dokumentierten Maßen (Höhe, Breite, Tiefe)
                versehen, um Vergleiche mit Originalen oder Repliken zu ermöglichen.</PropertyExplanation>
            <PropertyCategory>Structure</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Deskriptive Metadaten</PropertyName>
            <PropertyExplanation>Das Objekt ist mit beschreibenden Metadaten wie Herkunft, Typ,
                Funktion oder Material versehen.</PropertyExplanation>
            <PropertyCategory>Context</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>

        <!-- Materialität -->
        <SignificantProperty>
            <PropertyName>Scherbenstärke</PropertyName>
            <PropertyExplanation>Das Objekt ist mit der durchschnittlichen Scherbenstärke
                dokumentiert.</PropertyExplanation>
            <PropertyCategory>Content</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Scherbenmaterial und -farbe</PropertyName>
            <PropertyExplanation>Das Objekt weist dokumentierte Informationen über Scherbenmaterial
                und -farbe auf.</PropertyExplanation>
            <PropertyCategory>Content</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Glasurbereiche</PropertyName>
            <PropertyExplanation>Das Objekt enthält Angaben zu glasierten und unglasierten
                Bereichen.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Glasurmerkmale</PropertyName>
            <PropertyExplanation>Das Objekt enthält Angaben zu Glasurdicke, -farbe und -transparenz
                zur originalgetreuen Wiedergabe.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>

        <!-- Bemalung und Verzierung -->
        <SignificantProperty>
            <PropertyName>Farbmischinformationen</PropertyName>
            <PropertyExplanation>Das Objekt ist mit dokumentierten Zusammensetzungen verwendeter
                Farb- und Metallverzierungen versehen.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Farbtreue</PropertyName>
            <PropertyExplanation>Das Objekt gibt Farben originalgetreu wieder.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Positionierung</PropertyName>
            <PropertyExplanation>Das Objekt besitzt korrekt verortete Bemalungen und dekorative
                Elemente.</PropertyExplanation>
            <PropertyCategory>Structure</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Vollständigkeit der Bemalung</PropertyName>
            <PropertyExplanation>Das Objekt zeigt alle bemalten und verzierten Bereiche vollständig.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>

        <!-- Visualisierungsqualität -->
        <SignificantProperty>
            <PropertyName>Helligkeit</PropertyName>
            <PropertyExplanation>Das Objekt ist ausreichend beleuchtet, um alle Details zu erkennen.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Kontrast</PropertyName>
            <PropertyExplanation>Das Objekt weist einen hohen Kontrast zur klaren Unterscheidung von
                Formen und Farben auf.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Farbigkeit</PropertyName>
            <PropertyExplanation>Das Objekt ist in Farbe dokumentiert.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Schärfe</PropertyName>
            <PropertyExplanation>Das Objekt besitzt eine ausreichend hohe Schärfe, um feinste
                handwerkliche Merkmale wie Pinselduktus, Schichtaufbau oder Reliefwirkungen zu
                erkennen.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Auflösung</PropertyName>
            <PropertyExplanation>Das Objekt besitzt eine ausreichend hohe Auflösung, um feinste
                handwerkliche Merkmale wie Pinselduktus, Schichtaufbau oder Reliefwirkungen zu
                erkennen.</PropertyExplanation>
            <PropertyCategory>Rendering</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Größentreue</PropertyName>
            <PropertyExplanation>Das Objekt ist maßstabsgetreu dargestellt.</PropertyExplanation>
            <PropertyCategory>Structure</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>

        <!-- Struktur und Montage -->
        <SignificantProperty>
            <PropertyName>Montagemarkierungen</PropertyName>
            <PropertyExplanation>Das Objekt enthält relevante Markierungen (z. B. Ansatzstriche,
                Flächenkennzeichnungen) zur Montageorientierung.</PropertyExplanation>
            <PropertyCategory>Structure</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Gesamtansicht</PropertyName>
            <PropertyExplanation>Das Objekt ist durch mehrere Perspektiven vollständig dokumentiert,
                sodass ein räumlich abgeschlossener Eindruck für Montage und Reproduktion entsteht.</PropertyExplanation>
            <PropertyCategory>Structure</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>

        <!-- Technische Reproduzierbarkeit -->
        <SignificantProperty>
            <PropertyName>Druckbarkeit</PropertyName>
            <PropertyExplanation>Das Objekt ist so modelliert, dass es ohne Fehler physisch
                reproduzierbar ist (ohne Löcher, korrekte Normalen).</PropertyExplanation>
            <PropertyCategory>Behaviour</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Skalierbarkeit</PropertyName>
            <PropertyExplanation>Das Objekt ist skalierbar, um z. B. Materialschrumpfung beim Brand
                auszugleichen.</PropertyExplanation>
            <PropertyCategory>Behaviour</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Anpassbarkeit</PropertyName>
            <PropertyExplanation>Das Objekt ist digital bearbeitbar für individuelle oder
                restaurative Anpassungen.</PropertyExplanation>
            <PropertyCategory>Behaviour</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>

        <!-- Prozessdokumentation -->
        <SignificantProperty>
            <PropertyName>Nachvollziehbarkeit</PropertyName>
            <PropertyExplanation>Das Objekt ist mit dokumentierten Bearbeitungsschritten versehen,
                die reversibel und nachvollziehbar sind.</PropertyExplanation>
            <PropertyCategory>Context</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Digitalisierung</PropertyName>
            <PropertyExplanation>Das Objekt ist mit Angaben zur verwendeten
                Digitalisierungstechnologie (Scanner, Software, Einstellungen, Nachbearbeitung)
                versehen.</PropertyExplanation>
            <PropertyCategory>Context</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
        <SignificantProperty>
            <PropertyName>Reproduktionsparameter</PropertyName>
            <PropertyExplanation>Das Objekt ist mit technischen Daten zur Herstellung (z. B.
                Druckverfahren, Materialien, Einstellungen, Nachbearbeitung) dokumentiert.</PropertyExplanation>
            <PropertyCategory>Context</PropertyCategory>
            <PropertyProcedure>designated communities</PropertyProcedure>
        </SignificantProperty>
    </SignificantProperties>
</ObjectType>